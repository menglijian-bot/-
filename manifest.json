{
  "manifest_version": 3,
  "name": "佳鑫·中英互译助手",
  "version": "1.1",
  "description": "全站可用！可拖动常驻弹窗，支持多次快捷翻译和一键发送，支持划词翻译和历史。",
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_title": "中英互译助手"
  }
}